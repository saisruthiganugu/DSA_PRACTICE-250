import java.util.ArrayList;
import java.util.List;

class Solution {
    public List<List<Integer>> minimumAbsDifference(int[] arr) {
        List<List<Integer>> res = new ArrayList<>();
        int minDiff = Integer.MAX_VALUE;
        
        // Brute force: compare every pair
        for (int i = 0; i < arr.length; i++) {
            for (int j = i + 1; j < arr.length; j++) {
                int diff = Math.abs(arr[i] - arr[j]);
                if (diff < minDiff) {
                    minDiff = diff;
                    res.clear(); // Clear result list to store new pairs
                    res.add(List.of(arr[i], arr[j])); // Add new minimum difference pair
                } else if (diff == minDiff) {
                    res.add(List.of(arr[i], arr[j])); // Add pair with the same minimum difference
                }
            }
        }
        
        return res;
    }
}
